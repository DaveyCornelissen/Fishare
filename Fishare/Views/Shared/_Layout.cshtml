@using Fishare.Cookies
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Fishare</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css"/>
        <script src="~/fonts/fontawesome-all.js"></script>
        <link href="~/css/layout/Layout.css" rel="stylesheet"/>
    </environment>
    <environment include="Development">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    </environment>
</head>
<body class="Site">
<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <img class="FHPicture" src="~/images/Layout/fishing-rod.png"/>
    <a class="navbar-brand" href="#">Fishare</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarColor01">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
                <a class="nav-link" asp-controller="Timeline" asp-action="TimeLine"><i class="fas fa-clock"></i> Timeline <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#"><i class="fas fa-book"></i> FishOpedia</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#"><i class="fas fa-map"></i> Maps</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#"><i class="fas fa-calendar-alt"></i> Events</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#"><i class="fab fa-houzz"></i> FishClub</a>
            </li>
        </ul>
        <div class="form-inline my-2 my-lg-0">
            @if (CookieClaims.GetCookieID(User) != null)
            {
                <div class="btn-group navOptions" role="group">
                    <button onclick="window.location = '@Url.Action("Profile", "Account", new {Id = CookieClaims.GetCookieID(User)})'" class="btn btn-info">
                        <i class="fas fa-user"></i> @CookieClaims.GetCookieUserName(User)</button>
                    <div class="btn-group" role="group">
                        <button id="btnGroupOptions" type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true"></button>
                        <div class="dropdown-menu" aria-labelledby="btnGroupOptions">
                            <a class="dropdown-item" onclick="window.location = '@Url.Action("Logout", "Account")'"><i class="fas fa-sign-out-alt"></i> Logout</a>
                        </div>
                    </div>
                </div>
                if (String.IsNullOrEmpty(@CookieClaims.GetCookiePhoto(User)))
                {
                    <img class="PPicture" src="~/images/Layout/user.png"/>
                }
                else
                {
                    <img class="PPicture rounded-circle border border-info" src="~/images/Uploads/ProfileImages/@CookieClaims.GetCookiePhoto(User)"/>
                }
            }
            else
            {
                <form>
                    <button asp-controller="Account" asp-action="Login" class="btn btn-success my-2 my-sm-0 lg-ca-Btn" type="submit"><i class="fas fa-sign-in-alt"></i> Login</button>
                </form>
            }
        </div>
    </div>
</nav>
<div class="Main-Content">
    @RenderBody()
</div>
<footer class="page-footer pt-4">
    <div class="container-fluid text-center text-md-left">
        <div class="row mb-3 text-center d-flex justify-content-center">
            <div class="col-md-2 mb-3">
                <h6 class="text-uppercase">
                    <a class="Footer-text" href="#!">About us</a>
                </h6>
            </div>
            <div class="col-md-2 mb-3">
                <h6 class="text-uppercase">
                    <a class="Footer-text" href="#!">Products</a>
                </h6>
            </div>
            <div class="col-md-2 mb-3">
                <h6 class="text-uppercase">
                    <a class="Footer-text" href="#!">Awards</a>
                </h6>
            </div>
            <div class="col-md-2 mb-3">
                <h6 class="text-uppercase">
                    <a class="Footer-text" href="#!">Help</a>
                </h6>
            </div>
            <div class="col-md-2 mb-3">
                <h6 class="text-uppercase">
                    <a class="Footer-text" href="#!">Contact</a>
                </h6>
            </div>
        </div>
    </div>
    <div class="footer-copyright py-3 text-center">
        © 2018 Copyright: Fishare
    </div>
</footer>
@RenderSection("Scripts", required: false)
</body>
</html>
