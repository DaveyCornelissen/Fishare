@using Fishare.DAL.SQL
@using Fishare.Model
@model ProfileViewModel
@{
    ViewData["Title"] = "Profile";
}
<link href="~/css/Profile/Profile.css" rel="stylesheet"/>
<div class="container">
    <div class="Top-Content">
        <div class="row">
            <div class="UserImage">
                @*                                <img src="@Model.User.PpPath" class="UserPhoto"/>*@
            </div>
            <div class="col-md-6">
                <h4>@Model.User.UserName</h4>
                <h5>Name: @Model.User.FirstName @Model.User.LastName</h5>
                <h5>Posts: @Model.User.Posts.Count.ToString()</h5>
                <h5>Friends: @Model.User.TotalFriends</h5>
                <h5>Bio: @Model.User.Bio</h5>
            </div>
            <div class="col-md-4 ButtonDiv">
                <button class="btn btn-secondary ActionButtons">Settings</button>
                <Button class="btn btn-warning ActionButtons">Friends</Button>
            </div>
        </div>
    </div>
    <div class="User-Content">
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link active show" data-toggle="tab" href="#Posts">Posts</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#Statistics">Statistics</a>
            </li>
        </ul>
        <div id="myTabContent" class="tab-content">
            <div class="tab-pane fade active show" id="Posts">
                <div class="row">
                    @foreach (Post post in Model.User.Posts)
                    {
                        <div class="card text-white bg-warning mb-3" style="max-width: 20rem;">
                            <div class="card-header">@post.Title  @post.DateTime</div>
                            <div class="card-body">
                                <img class="PreviewPostImage" src="~@post.PrimaryPhoto"/>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="tab-pane fade" id="Statistics">
                <h4>Statics</h4>
            </div>
        </div>
    </div>
</div>

