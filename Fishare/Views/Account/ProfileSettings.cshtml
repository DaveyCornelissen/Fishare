@model ProfileSettingsViewModel
<div id="AccountSettings" class="modal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Settings Page</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body col-md-10 offset-md-1 col-sm-12">
                <form asp-controller="Account" asp-action="Profile" class="post-using-ajax" method="post" enctype="multipart/form-data">
                    <div class="Top-Text">
                        <p>Change here your account settings.</p>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="Email">Email address</label>
                            <input asp-for="UserEmail" type="email" class="form-control" data-val="true" aria-describedby="emailHelp" placeholder="Enter a email">
                            <span asp-validation-for="UserEmail" data-valmsg-replace="true" class="form-text field-validation-valid text-danger"></span>
                            <span class="form-text field-validation-valid text-danger">@ViewData["ErrorEmailExist"]</span>
                        </div>
                        
                        <div class="form-group">
                            <label for="Password">Password</label>
                            <input asp-for="Password" type="password" class="form-control" data-val="true" placeholder="leave empty if you dont want to change your password">
                            <span asp-validation-for="Password" data-valmsg-replace="true" class="form-text field-validation-valid text-danger"></span>
                            <span class="form-text field-validation-valid text-danger">@ViewData["ErrorPassword"]</span>
                        </div>
                        <div class="form-group">
                            <label for="FirstName">First Name</label>
                            <input asp-for="FirstName" type="text" class="form-control" data-val="true" placeholder="Enter Firstname">
                            <span asp-validation-for="FirstName" data-valmsg-replace="true" class="form-text field-validation-valid text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="LastName">Last Name</label>
                            <input asp-for="LastName" type="text" class="form-control" data-val="true" placeholder="Enter your lastname">
                            <span asp-validation-for="LastName" data-valmsg-replace="true" class="form-text field-validation-valid text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="BirthDay">Birth Day</label>
                            <input asp-for="Birthday" class="form-control" placeholder="Enter your date of birth">
                        </div>
                        <div class="form-group">
                            <label for="Phone">Phone</label>
                            <input asp-for="PhoneNumber" type="tel" class="form-control" placeholder="Enter phone number">
                        </div>
                        <div class="form-group">
                            <label for="Bio">Bio</label>
                            <textarea asp-for="Bio" rows="3" data-val="true" class="form-control" placeholder="Enter here your Bio story"></textarea>
                            <span asp-validation-for="Bio" data-valmsg-replace="true" class="form-text field-validation-valid text-danger"></span>
                        </div>
                        @if (String.IsNullOrEmpty(Model.PPathView))
                        {
                            <div class="form-group">
                                <img src="~/images/Uploads/ProfileImages/@Model.PPathView" class="PreviewAccountImage rounded border border-info" />
                            </div>
                        }
                        <div class="form-group">
                            <label for="ProfilePhoto">Upload profile picture</label>
                            <input asp-for="PPathUpload" type="file" class="form-control-file" id="ProfilePhoto" aria-describedby="fileHelp">
                            <small id="fileHelp" class="form-text text-muted">You can only upload images with these formats: PNG, JPEG, GIF</small>
                        </div>
                        <span class="form-text text-danger">@ViewData["UserCreateFailed"]</span>
                    </div>
                    <div class="modal-footer">
                        <button id="EditAccoutButton" type="submit" class="btn btn-success">Save changes</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="~/js/account/profile/profileSettings.js"></script>