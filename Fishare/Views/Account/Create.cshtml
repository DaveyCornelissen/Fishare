@model CreateAccountViewModel
@{
    ViewData["Title"] = "Create Account";
}

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

<link href="~/css/authentication/authetication.css" rel="stylesheet" />

<div class="col-md-10 offset-1">
    <div class="col-md-12">
        <img src="~/images/Layout/fishing-rod.png" class="WelcomeImage" />
    </div>
    <div class="col-md-12">
        <form asp-controller="Account" asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="Top-Text">
                <h4>Welcome to Fishare!</h4>
                <p>Your online fishing platform to share all your fish adventures with your friends</p>
                <p>Please register to continue</p>
            </div>
            <div class="row ContentText">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="Email">Email address</label>
                        <input asp-for="UserEmail" type="email" class="form-control" aria-describedby="emailHelp" placeholder="Enter a email">
                        <span asp-validation-for="UserEmail" id="emailHelp" class="form-text text-danger">@ViewData["ErrorEmailExist"]</span>
                    </div>
                    <div class="form-group">
                        <label for="Password">Password</label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Enter a Password">
                        <span asp-validation-for="Password" id="UserNameHelp" class="form-text text-danger">@ViewData["ErrorPassword"]</span>
                    </div>
                    <div class="form-group">
                        <label for="FirstName">First Name</label>
                        <input asp-for="FirstName" type="text" class="form-control" placeholder="Enter Firstname">
                        <span asp-validation-for="FirstName" id="UserNameHelp" class="form-text text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="LastName">Last Name</label>
                        <input asp-for="LastName" type="text" class="form-control" placeholder="Enter your lastname">
                        <span asp-validation-for="LastName" id="UserNameHelp" class="form-text text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="BirthDay">Birth Day</label>
                        <input asp-for="Birthday" class="form-control" placeholder="Enter your date of birth">
                    </div>
                    <div class="form-group">
                        <label for="Phone">Phone</label>
                        <input asp-for="PhoneNumber" type="tel" class="form-control" placeholder="Enter phone number">
                    </div>
                    <div class="form-group">
                        <label for="ProfilePhoto">Upload profile picture</label>
                        <input asp-for="PPath" class="form-control-file" id="ProfilePhoto" aria-describedby="fileHelp">
                        <small id="fileHelp" class="form-text text-muted">You can only upload images with these formats: PNG, JPEG, GIF</small>
                    </div>
                    <span class="form-text text-danger">@ViewData["UserCreateFailed"]</span>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>
        </form>
    </div>
</div>
